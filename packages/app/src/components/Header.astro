---
import HeaderLink from "./HeaderLink.astro";
import ThemeSwitch from "./ThemeSwitch";
import { SITE_TITLE } from "../consts";

export type Props = {
  small?: boolean;
  title: string;
  theme?: "light" | "dark";
};

const { small, theme } = Astro.props;
---

<header
  class="fixed top-0 w-full flex flex-row items-center justify-center border-b border-neutral-300 dark:border-neutral-800 bg-white dark:bg-black"
>
  <nav
    class:list={[
      "container gap-2 mx-auto flex flex-row items-center justify-between h-full",
      {
        [`max-w-[1100px]`]: !!small,
      },
    ]}
  >
    <div class="w-max flex-1 flex flex-row items-center justify-between">
      <HeaderLink href="/">{SITE_TITLE}</HeaderLink>
    </div>
    <div class="w-full flex flex-row items-center justify-end gap-0 h-full p-0">
      <HeaderLink href="/blogs">Blogs</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
    </div>
  </nav>
</header>
