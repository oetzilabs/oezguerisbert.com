---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

export type Props = {
  small?: boolean;
  title: string;
  theme?: "light" | "dark";
};

const { small } = Astro.props;
---

<header
  class="fixed top-0 w-full flex flex-row items-center justify-center bg-white dark:bg-black"
>
  <nav
    class:list={[
      "container gap-2 mx-auto flex flex-row items-center justify-between h-full py-2",
      {
        [`max-w-[800px]`]: !!small,
      },
    ]}
  >
    <div class="w-max flex-1 flex flex-row items-center justify-between">
      <a class="font-black w-max" href="/">{SITE_TITLE}</a>
    </div>
    <div class="w-full flex flex-row items-center justify-end gap-0 h-full p-0">
      <HeaderLink href="/blogs">Blogs</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
    </div>
  </nav>
</header>
