---
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ToggleBrightness";

export type Props = {
  small?: boolean;
  title: string;
  theme?: "light" | "dark";
};

const { small } = Astro.props;
---

<header class="w-full flex flex-row items-center justify-center bg-white dark:bg-black">
  <nav
    class:list={[
      "container gap-2 mx-auto flex flex-row items-center justify-between h-full py-2",
      {
        [`max-w-[800px]`]: !!small,
      },
    ]}
  >
    <div class="w-max flex-1 flex flex-row items-center justify-between">
      <a class="font-black w-max" href="/">Home</a>
    </div>
    <div class="w-full flex flex-row items-center justify-end gap-2 h-full p-0">
      <ThemeToggle client:load />
      <HeaderLink href="/blogs">Blogs</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
    </div>
  </nav>
</header>
