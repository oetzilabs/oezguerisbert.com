---
import HeaderLink from "./HeaderLink.astro";
import ThemeSwitch from "./ThemeSwitch";
import { SITE_TITLE } from "../consts";
---

<header
  class="fixed top-0 w-full flex flex-row items-center justify-center border-b border-neutral-300 dark:border-neutral-800 bg-white dark:bg-black"
>
  <nav class="container gap-2 mx-auto flex flex-row items-center justify-between px-4 py-2">
    <a href="/"><h2 class="w-max font-bold">{SITE_TITLE}</h2></a>
    <div class="container flex flex-row items-center justify-center gap-2">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blogs">Blogs</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="w-max flex flex-row items-center justify-between gap-4">
      <ThemeSwitch theme={(Astro.cookies.get("theme")?.value as "dark" | "light") ?? "dark"} client:load />
      <HeaderLink href="/socials">Socials</HeaderLink>
    </div>
  </nav>
</header>
