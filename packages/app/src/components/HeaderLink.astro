---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = typeof href === "string" ? (href === "/" ? pathname === href : pathname.startsWith(href)) : false;
---

<a
  href={href}
  class:list={["font-semibold w-max h-full p-2 text-sm", className, { "font-black": isActive }]}
  {...props}
>
  <slot />
</a>
