---
import "@fontsource/geist-mono";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

export type Props = {
  small?: boolean;
  theme?: "light" | "dark";
};

const { small, theme } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class:list={{
    dark: theme === "dark",
  }}
>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-white dark:bg-black text-black dark:text-white flex-1 overflow-auto px-4">
    <Header title={SITE_TITLE} small={small} />
    <main class="pt-14 flex flex-col min-h-min">
      <div
        class:list={[
          "container mx-auto flex flex-col h-full px-4",
          {
            [`max-w-[800px]`]: !!small,
          },
        ]}
      >
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
